<UserControl x:Class="ListasDeReproduccion.Views.EstadisticasView.EstadisticaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ListasDeReproduccion.Views.EstadisticasView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <DataGrid ItemsSource="{Binding listadecyd}" Background="SlateGray"  GridLinesVisibility="None" Foreground="Black"   AutoGenerateColumns="False" RowBackground="#7C95A2" AlternatingRowBackground="#7C95A2" >
            <DataGrid.Columns >
                <DataGridTextColumn Header="Cancion" FontWeight="Bold" Binding="{Binding cancion.Titulo}"></DataGridTextColumn>
                <DataGridTextColumn  Header="Interprete" FontWeight="Bold" Binding="{Binding cancion.Artista}"></DataGridTextColumn>
                <DataGridTextColumn Header="Duracion" FontWeight="Bold" Binding="{Binding cancion.Duracion}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
